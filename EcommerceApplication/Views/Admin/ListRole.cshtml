@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{

    ViewBag.Title = "All Roles";
}
<div class="container">
    <h1>All Roles</h1>
</div>
<br/>
@* check if any role is present or not *@
@if (Model.Any())
{
    <div class="container"> 
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole"
    asp-controller="Admin">Add New Role</a>
    </div>
    <br/>
    foreach (var role in Model)
    {
        <div class="container">
            <div class="card mb-3">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a  class="btn btn-primary" asp-action="EditRole" asp-controller="Admin" asp-route-id="@role.Id">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
    }
}
else
{
    <div class="container"> 
        <div class="card">
        <div class="card-header">
            No Roles Created Yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the below button to create a role
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Admin" asp-action="CreateRole">
                Create Role
            </a>
        </div>
    </div>
    </div>

}


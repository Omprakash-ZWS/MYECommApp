 @model IEnumerable<EcommerceApplication.Models.ViewModel.CategoryDto>

@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                CategoryName
            </th>

             <th>
            colour
            </th>
            <th>
            description
            </th>
            <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
            <tr>
            <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
            </td>

             <td>
            @Html.DisplayFor(modelItem => item.colour)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a>
            <a class="btn btn-outline-success" asp-action="Details" asp-route-id="@item.CategoryId">Details</a>
            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
            </tr>
            }
            </tbody>
            </table>
            
